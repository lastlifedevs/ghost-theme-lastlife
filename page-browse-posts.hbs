{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}
{{> "header"}} 
<main id="site-main" class="site-main outer" role="main">
    <div class="inner">
        <header class="post-full-header">
            <h1 class="post-full-title">Browse Posts</h1>
        </header>

        <form id="searchForm" class="page-content">
            <div class="search-container">
                <i class="ll-social-icon icon-search"></i>
                <input id="searchField" placeholder="Search posts by title, author, game, or text content"/>
            </div>
        </form>

        <section id="results" class="posts-list">
            <div class="page-content">
                <section class="page-description">
                    <p>Displaying the 30 most recent posts. Use the search field above to search the full archive of posts.</p>
                </section>    
            </div>
            {{#get "posts" limit="30" order="desc" include="authors"}}            
                {{#foreach posts}}
                    {{> "post-card-mini"}}
                {{/foreach}}
            {{/get}}
        </section>
    </div>
</main>

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in
default.hbs --}}
{{#contentFor "scripts"}}
<script type="text/javascript" src="{{asset "ghostHunter/dist/jquery.ghosthunter.min.js"}}"></script>
<script>
    $("#searchField").ghostHunter({
        results: "#results"
    });
</script>
{{/contentFor}}